<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Basic styling for the buttons. -->
    <style name="Buttons" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/home_buttons_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Styling for highlighted buttons. -->
    <style name="highlightedButtons" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/theme2ColorLight</item>
        <item name="android:background">@drawable/highlighted_buttons_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Basic styling for card view buttons. -->
    <style name="CardViewButtons" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/theme2ColorLight</item>
        <item name="android:background">@drawable/card_view_buttons_background</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
