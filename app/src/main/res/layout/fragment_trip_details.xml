<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.example.inoapp.yourtrips.TripDetailsFragment">

    <!--<data>

        <variable
                name="addNewTripViewModel"
                type="com.example.inoapp.addnewtrip.AddNewTripViewModel" />
    </data>-->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/trip_details_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/trip_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Trip title:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        <TextView
                android:id="@+id/trip_details_title_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Best trip ever!"
                app:layout_constraintStart_toEndOf="@+id/trip_details_title"
                app:layout_constraintTop_toTopOf="@+id/trip_details_title" app:layout_constraintEnd_toEndOf="parent"/>

        <View
                android:id="@+id/trip_details_title_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/theme2ColorDark"
                app:layout_constraintTop_toBottomOf="@+id/trip_details_title_content"/>

        <TextView
                android:id="@+id/trip_details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Trip description:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/trip_details_title_separator"
        />

        <TextView
                android:id="@+id/trip_details_description_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Description Description Description Description Description"
                app:layout_constraintStart_toEndOf="@+id/trip_details_description"
                app:layout_constraintTop_toTopOf="@+id/trip_details_description"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

        <View
                android:id="@+id/trip_details_description_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/theme2ColorDark"
                app:layout_constraintTop_toBottomOf="@+id/trip_details_description_content"/>

        <TextView
                android:id="@+id/trip_details_number_of_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Number of points:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/trip_details_description_separator" />

        <TextView
                android:id="@+id/trip_details_number_of_points_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="12"
                app:layout_constraintStart_toEndOf="@+id/trip_details_number_of_points"
                app:layout_constraintTop_toTopOf="@+id/trip_details_number_of_points"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

        <View
                android:id="@+id/trip_details_number_of_points_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/theme2ColorDark"
                app:layout_constraintTop_toBottomOf="@+id/trip_details_number_of_points_content"/>

        <TextView
                android:id="@+id/trip_details_localization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Localization:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/trip_details_number_of_points_separator"
        />

        <TextView
                android:id="@+id/trip_details_localization_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Barcelona"
                app:layout_constraintStart_toEndOf="@+id/trip_details_localization"
                app:layout_constraintTop_toTopOf="@+id/trip_details_localization"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>