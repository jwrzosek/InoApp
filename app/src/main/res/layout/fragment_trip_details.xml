<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="tripDetailsViewModel"
                type="com.example.inoapp.tripdetails.TripDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/trip_details_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme2ColorLight"
            tools:context="com.example.inoapp.tripdetails.TripDetailsFragment">

        <!-- Trip title -->
        <TextView
                android:id="@+id/trip_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/trip_details_trip_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/trip_details_title_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toEndOf="@+id/trip_details_title"
                app:layout_constraintTop_toTopOf="@+id/trip_details_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:tripTitle="@{tripDetailsViewModel.getTrip}"/>

        <View
                android:id="@+id/trip_details_title_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/theme2ColorDark"
                app:layout_constraintTop_toBottomOf="@+id/trip_details_title_content"/>

        <!-- Trip description -->
        <TextView
                android:id="@+id/trip_details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/trip_details_trip_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/trip_details_title_separator" />

        <TextView
                android:id="@+id/trip_details_description_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toEndOf="@+id/trip_details_description"
                app:layout_constraintTop_toTopOf="@+id/trip_details_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:tripDescription="@{tripDetailsViewModel.trip}"/>

        <View
                android:id="@+id/trip_details_description_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/theme2ColorDark"
                app:layout_constraintTop_toBottomOf="@+id/trip_details_description_content"/>

        <!-- Trip localization -->
        <TextView
                android:id="@+id/trip_details_localization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/trip_details_trip_localization"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/trip_details_description_separator"/>

        <TextView
                android:id="@+id/trip_details_localization_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toEndOf="@+id/trip_details_localization"
                app:layout_constraintTop_toTopOf="@+id/trip_details_localization"
                app:layout_constraintEnd_toEndOf="parent"
                app:tripLocalization="@{tripDetailsViewModel.trip}"/>

        <View
                android:id="@+id/trip_details_localization_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/theme2ColorDark"
                app:layout_constraintTop_toBottomOf="@+id/trip_details_localization_content"/>

        <!-- Trip number of points -->
        <TextView
                android:id="@+id/trip_details_number_of_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/trip_details_number_of_points"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/trip_details_localization_separator" />

        <TextView
                android:id="@+id/trip_details_number_of_points_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toEndOf="@+id/trip_details_number_of_points"
                app:layout_constraintTop_toTopOf="@+id/trip_details_number_of_points"
                app:layout_constraintEnd_toEndOf="parent"
                app:tripNumberOfPoints="@{tripDetailsViewModel.trip}"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/trip_details_start_trip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_marginEnd="@dimen/fab_margin"
                app:srcCompat="@drawable/ic_trip_start_32dp"
                app:layout_constraintTop_toBottomOf="@+id/trip_details_number_of_points_content"
                app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/trip_details_delete_trip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> tripDetailsViewModel.onDelete()}"
                app:srcCompat="@drawable/ic_trip_delete"
                app:layout_constraintTop_toBottomOf="@+id/trip_details_start_trip_button"
                app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/trip_details_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> tripDetailsViewModel.onBack()}"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/fab_margin"
                app:srcCompat="@drawable/ic_trip_back"
                app:layout_constraintTop_toBottomOf="@+id/trip_details_delete_trip_button"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>